<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sky Notes AI</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="app-header">
    <div class="app-title">SKY NOTES AI</div>
    <nav class="main-nav">
      <a href="index.html" class="nav-btn nav-btn-active">Domů</a>
      <a href="rozpoznavani.html" class="nav-btn">Rozpoznávání</a>
      <a href="settings.html" class="nav-btn">Nastavení</a>
      <a href="help.html" class="nav-btn">Nápověda</a>
      <a href="aboutus.html" class="nav-btn">O nás</a>
    </nav>
    <button id="settingsBtn" class="settings-btn" title="Nastavení">⚙️</button>
  </div>

  <!-- Permissions Modal -->
  <div id="permissionsModal" class="modal hidden">
    <div class="modal-content">
      <button class="modal-close" id="closePermissionsModal" title="Zavřít">✖</button>
      <h3>Povolení k přístupu</h3>
      <div class="section-title">Povolení k přístupu:</div>
      <label class="custom-checkbox">
        <input type="checkbox" id="cameraPermission">
        <span class="checkmark"></span>
        Povolit použití kamery
      </label>
      <label class="custom-checkbox">
        <input type="checkbox" id="micPermission">
        <span class="checkmark"></span>
        Povolit použití mikrofonu
      </label>
    </div>
  </div>

  <div class="main-bg" style="display:flex;flex-direction:column;align-items:center;justify-content:center;min-height:calc(100vh - 70px);">
    <img src="assets/logo.png" alt="Sky Notes AI Logo" class="main-logo" style="margin-bottom:2.5rem;" />
    <div class="tagline" style="font-size:2rem;margin-bottom:1.5rem;">OD NOT NA PAPÍŘE K HUDBĚ V HLAVĚ</div>
    <div style="max-width:600px;text-align:center;color:#fff;opacity:0.95;font-size:1.2rem;margin-bottom:2.5rem;">
      Sky Notes AI je moderní webová aplikace, která vám pomůže rozpoznat hudební noty podle zvuku. Vyzkoušejte rozpoznávání tónů, prohlédněte si historii, nebo si přečtěte nápovědu.
    </div>
    <div style="display:flex;gap:2rem;flex-wrap:wrap;justify-content:center;">
      <a href="rozpoznavani.html" class="main-nav-btn">Rozpoznávání</a>
      <a href="help.html" class="main-nav-btn">Nápověda</a>
      <a href="settings.html" class="main-nav-btn">Nastavení</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@1.3.1/dist/tf.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tensorflow-models/speech-commands@0.4.0/dist/speech-commands.min.js"></script>
  <script type="module" src="js/navigation.js"></script>
  <script type="module" src="js/permissions.js"></script>
  <script>
    // Modal logic
    const settingsBtn = document.getElementById('settingsBtn');
    const permissionsModal = document.getElementById('permissionsModal');
    const closePermissionsModal = document.getElementById('closePermissionsModal');
    settingsBtn.addEventListener('click', () => {
      permissionsModal.classList.remove('hidden');
    });
    closePermissionsModal.addEventListener('click', () => {
      permissionsModal.classList.add('hidden');
    });
    permissionsModal.addEventListener('click', (e) => {
      if (e.target === permissionsModal) {
        permissionsModal.classList.add('hidden');
      }
    });
  </script>
</body>
</html> 